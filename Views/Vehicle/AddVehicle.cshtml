    <div class="form-group">
        @Html.LabelFor(model => model.VehicleOwnerSurname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.VehicleOwnerSurname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.VehicleOwnerSurname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @{
            List<SelectListItem> listItems3 = new List<SelectListItem>();
            listItems3.Add(new SelectListItem
            {
                Text = "Yetkili Servis",
                Value = "Yetkili Servis",
                Selected = true

            });
            listItems3.Add(new SelectListItem
            {
                Text = "Özel Servis",
                Value = "Özel Servis",
            });

        }
        @Html.LabelFor(model => model.LastCare, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.LastCare, listItems3, "-- Son Bakım Yeri --", new { htmlAttributes = new { @class = "dropdown" } })
            @Html.ValidationMessageFor(model => model.LastCare, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-success" />
        </div>
    </div>
</div>
}

